{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": [
      "es2020",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noPropertyAccessFromIndexSignature": false,
    "paths": {
      "@peachy-healthcare/app-constant": [
        "libs/app-constant/src/index.ts"
      ],
      "@peachy-healthcare/app-interface": [
        "libs/app-interface/src/index.ts"
      ]
    },
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "target": "es2015"
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
